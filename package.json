{
  "name": "shopstream",
  "version": "0.1.0",
  "description": "Multi-tenant commerce plus social reference app",
  "private": true,
  "workspaces": [
    "frontend/*",
    "services/*",
    "platform/*"
  ],
  "scripts": {
    "dev": "echo 'Use npm run dev:<workspace> to start specific apps'",
    "dev:shell": "npm run dev --workspace=frontend/shell",
    "dev:catalog": "npm run dev --workspace=frontend/catalog",
    "dev:identity": "npm run dev --workspace=services/identity",
    "dev:all-frontend": "concurrently \"npm:dev:shell\" \"npm:dev:catalog\" \"npm:dev:checkout\" \"npm:dev:feed\"",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present || echo 'No tests yet'",
    "test:unit": "npm run test:unit --workspaces --if-present",
    "test:integration": "npm run test:integration --workspaces --if-present",
    "test:e2e": "npm run test:e2e --workspace=tests/e2e --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json,md}\"",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.1.0",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.3.2"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mofekayode/Shopstream.git"
  },
  "author": "Mofe Kayode",
  "license": "MIT"
}
